@model StoreIndustriesDto
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Adm/Views/Shared/_Layout_Body.cshtml";
}
@section Scripts{
    <script>$("#submitForm").validate({
            submitHandler: jucheap.buttonLoading,
            rules: {
                Title: {
                    required: true,
                    minlength: 2,
                    maxlength: 20
                },
            },
            messages: {
                Title: {
                    required: "请输入行业名称",
                    minlength: "最小长度为2个字符",
                    maxlength: "最大长度为20个字符"
                },
            }
        });</script>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                添加店铺行业
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="submitForm" method="POST" action="@Request.Url.PathAndQuery" novalidate="novalidate">
                        @Html.HiddenFor(item => item.Id, new { @class = "form-control" })
                        <div class="form-group ">
                            @Html.LabelFor(item => item.Title, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.Title, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">保存</button>
                                <button class="btn btn-default" type="button" onclick="jucheap.goback(this)">返回</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>
